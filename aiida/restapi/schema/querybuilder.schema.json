{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Schema for POST requests to /querybuilder",
  "type": "object",
  "definitions": {
    "path_object": {
      "type": "object",
      "properties": {
        "entity_type": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "tag": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "joining_keyword": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "joining_value": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "outerjoin": {
          "type": "boolean"
        },
        "edge_tag": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "edge_tag",
        "entity_type",
        "joining_keyword",
        "joining_value",
        "outerjoin",
        "tag"
      ]
    },
    "OrderBy": {
      "type": "object",
      "properties": {
        "calc": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OrderByCalc"
          }
        }
      }
    },
    "OrderByCalc": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/ID"
        }
      },
      "required": [
        "id"
      ],
      "title": "OrderByCalc"
    },
    "ID": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "cast": {
              "type": "string",
              "enum": [
                "desc",
                "asc"
              ]
            },
            "order": {
              "type": "string",
              "enum": [
                "desc",
                "asc"
              ]
            }
          }
        }
      ]
    }
  },
  "required": [
    "path",
    "filters",
    "order_by",
    "limit",
    "offset",
    "project"
  ],
  "properties": {
    "path": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/path_object"
      }
    },
    "filters": {
      "type": "object"
    },
    "order_by": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/OrderBy"
      }
    },
    "project": {
      "type": "object",
      "properties": {
        "calc": {
          "type": "array"
        }
      }
    },
    "limit": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ]
    },
    "offset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
